@model IEnumerable<InAndOut.Models.Expenses>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Expenses List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary text-white">Create New Expense</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
                <table class="table table-bordered table-striped" style="width: 100%">
                    <thead>
                        <tr>
                            <th>
                                Expenses
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Expense Type
                            </th>
                            <th>
                                Changes
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expenses in Model)
                        {
                        <tr>
                            <td class="width:25%">@expenses.ExpenseName</td>
                            <td class="width:25%">@expenses.Amount</td>
                            <td class="width:25%">@expenses.ExpenseType.Name</td>
                            <td class="width:25%">
                                <div class="w-50 btn-group" role="group">
                                    <a asp-controller="Expenses" asp-action="Update" asp-route-Id="@expenses.Id" class="btn btn-primary text-white mx-1">Update</a>
                                    <a asp-controller="Expenses" asp-action="Delete" asp-route-Id="@expenses.Id" class="btn btn-danger text-white mx-1">Delete</a>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
        }
        else
            {
            <p>No Items created yet</p>
            }
  
    </div>

